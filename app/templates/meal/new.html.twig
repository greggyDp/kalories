{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_meal_new' %}

{% block main %}
    <h1>{{ 'Add meal' }}</h1>

    {{ form_start(form) }}
        {{ form_row(form.text) }}
        {{ form_row(form.caloriesNumber) }}
        {{ form_row(form.createdAt) }}

        <button type="submit" class="btn btn-success">
            <i class="fa fa-save" aria-hidden="true"></i> {{ 'Create meal' }}
        </button>

        {{ form_widget(form.saveAndCreateNew, {label: 'label.save_and_create_new', attr: {class: 'btn btn-primary'}}) }}

        <a href="{{ path('admin_meal_index') }}" class="btn btn-link">
            <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.back_to_list'|trans }}
        </a>

    {{ form_end(form) }}
{% endblock %}

{% block sidebar %}
    {{ parent() }}
{% endblock %}
